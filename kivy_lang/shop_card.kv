<ShopCard>:
    shop_name: ""
    image: ""
    text: ""
    icon: ""
    padding: dp(10)
    spacing: dp(10)
    radius: dp(25)
    open_text: "Megnyit√°s"
    size_hint: None, None
    size: "160dp", "200dp"
    orientation: "vertical"

    Image:
        source: root.image
        radius: [15,]

    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            orientation: "horizontal"

            MDLabel:
                halign: "center"
                text: root.text
                font_name: "assets/fonts/Comfortaa-Regular.ttf"

            MDIconButton:
                pos_hint: {'center_y': 0.5}
                icon: root.icon
                theme_icon_color: "Custom"
                icon_color: "red"
                on_release:
                    app.database.add_to_favorites(root.shop_name)
                    self.icon = "heart" if self.icon == "heart-outline" else "heart-outline"

        MDBoxLayout:
            padding: "30dp"

            MDTextButton:
                size_hint: None, None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: open_button
                text: root.open_text
                on_release: app.controller.view_pdf(root.shop_name)
