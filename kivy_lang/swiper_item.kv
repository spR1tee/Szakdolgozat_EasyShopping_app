<MagicButton@MagicBehavior+MDIconButton>


<MySwiper@MDSwiperItem>
    icon: ""
    text: ""
    type: ""
    image: ""

    RelativeLayout:

        MDBoxLayout:
            md_bg_color: app.theme_cls.primary_color
            radius: [20,]
            adaptive_height: True
            spacing: "12dp"

            MagicButton:
                id: icon
                icon: root.icon
                user_font_size: "56sp"
                # opposite_colors: True

            MDLabel:
                text: root.text
                font_name: "assets/fonts/Comfortaa-Regular.ttf"
                font_size: 18
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_y": .5}
                # opposite_colors: True