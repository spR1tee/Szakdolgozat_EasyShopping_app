<RegisterScreen>:
    name: "register"

    MDFloatLayout:
        md_bg_color: "white"

        MDTopAppBar:
            id: reg
            pos_hint: {'top': 1}
            type_height: "small"
            left_action_items: [["arrow-left", lambda x: app.controller.go_to_login_screen()]]
            title: "Regisztráció"

        MDBoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            padding: [dp(10), dp(10)]
            adaptive_height: True

            MDTextField:
                id: user_email
                hint_text: "E-mail cím"
                helper_text: "Ezzel az E-mail címmel tudsz majd bejelentkezni"
                helper_text_mode: "on_focus"
                pos_hint: {'center_x': 0.5}
                size_hint_x: None
                width: "300dp"
                icon_left: "email"

            MDTextField:
                id: username
                hint_text: "Felhasználónév"
                pos_hint: {'center_x': 0.5}
                size_hint_x: None
                width: "300dp"
                icon_left: "account"

            ClickableTextFieldRound:
                id: register_pw
                size_hint_x: None
                hint_text: "Jelszó"
                width: "300dp"
                pos_hint: {"center_x": 0.5}

            ClickableTextFieldRoundPasswordAgain:
                id: register_pw_again
                size_hint_x: None
                hint_text: "Jelszó újra"
                width: "300dp"
                pos_hint: {"center_x": 0.5}

            MDFillRoundFlatIconButton:
                text: "Születési dátum"
                icon: "calendar"
                font_name: "fonts/Comfortaa-Regular.ttf"
                pos_hint: {'center_x': 0.5}
                size_hint: None, None
                width: root.width*0.5
                on_release: app.show_date_picker()

            MDBoxLayout:
                id: dob_box
                orientation: "vertical"
                size_hint: None, None
                adaptive_width: True
                adaptive_height: True
                pos_hint: {'center_x': 0.5}

            MDFillRoundFlatIconButton:
                text: "Regisztráció"
                icon: "note"
                font_name: "fonts/Comfortaa-Regular.ttf"
                pos_hint: {'center_x': 0.5}
                size_hint: None, None
                width: "300dp"
                on_release:
                    app.database.sign_up(user_email.text, register_pw.text, register_pw_again.text)
                    root.manager.transition.direction = "left"