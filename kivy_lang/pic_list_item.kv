<PicListItem>:
    id: the_list_pic_item

    IconLeftWidget:
        icon: "open-in-app"
        on_release:
            app.view_card_pic(the_list_pic_item.text)

    IconRightWidget:
        icon: 'trash-can-outline'
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1
        on_release:
            root.delete_item(the_list_pic_item)